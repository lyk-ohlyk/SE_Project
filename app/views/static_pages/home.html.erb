<% provide(:title, 'Moyuu') %>

<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
        <section>
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
      <div class="span8 show_items">
        <h3>Micropost Feed</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>

<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Moyu</h1>
    <h2>
      This is not the home page for the
      <a href="http://railstutorial.org/" target="_blank">Ruby on Rails Tutorial</a>
      sample application.
    </h2>
    <!--%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %-->
    <%= link_to "Find course now!", index_path, class: "btn btn-large btn-primary" %>
  </div>

<% end %>
